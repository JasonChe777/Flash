<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/login_btn_color"
    android:background="@drawable/shape_category_card"
    android:padding="5dp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Products Name"
        android:textColor="@color/login_btn_text_color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_price_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Unit Price: "
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/backgroundColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/backgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_quantity_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Quantity: "
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/backgroundColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_price" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textStyle="bold"
        android:textColor="@color/backgroundColor"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_price" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_amount_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Total Amount: "
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_quantity" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price"
        android:textStyle="bold"
        android:textColor="@color/backgroundColor"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_quantity" />

</androidx.constraintlayout.widget.ConstraintLayout>