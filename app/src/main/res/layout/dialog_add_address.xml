<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    android:backgroundTint="@color/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_add_address_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Address"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/login_btn_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_add_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:text="Address Title"
            android:textColor="@color/login_text_color"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_address_top"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_add_address_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingHorizontal="20dp"
            android:layout_margin="@dimen/_10dp"
            android:hint="Enter Title Here: "
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_text_color"
            android:background="@drawable/shape_input_field"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_address_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_add_address_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:text="Address"
            android:textColor="@color/login_text_color"
            app:layout_constraintTop_toBottomOf="@+id/et_add_address_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_add_address_address"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingHorizontal="20dp"
            android:hint="Enter Address Here"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_text_color"
            android:layout_margin="@dimen/_10dp"
            android:background="@drawable/shape_input_field"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_address_address" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_address_cancel"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textStyle="bold"
            android:background="@color/login_text_color"
            android:layout_margin="@dimen/_20dp"
            android:textColor="@color/login_btn_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_add_address_save"
            app:layout_constraintTop_toBottomOf="@+id/et_add_address_address" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_address_save"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textStyle="bold"
            android:background="@color/login_text_color"
            android:textColor="@color/login_btn_text_color"
            android:layout_margin="@dimen/_20dp"
            app:layout_constraintStart_toEndOf="@id/btn_add_address_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_add_address_address" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>