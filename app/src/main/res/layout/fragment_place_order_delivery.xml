<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="@dimen/_15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_choose_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Please Select Your Delivery Address"
        android:textColor="@color/login_text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:backgroundTint="@color/backgroundColor"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/rg_choose_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_btn_color"
            android:layout_margin="20dp"
            android:layoutDirection="rtl"

            app:layout_constraintTop_toBottomOf="@id/tv_choose_address_title">

        </RadioGroup>

    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_checkout_delivery_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/login_text_color"
        android:text="Add New Address"
        android:textColor="@color/login_btn_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btn_checkout_delivery_next"
        app:layout_constraintEnd_toStartOf="@id/btn_checkout_delivery_next"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_checkout_delivery_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/login_text_color"
        android:text="Next"
        android:textColor="@color/login_btn_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>